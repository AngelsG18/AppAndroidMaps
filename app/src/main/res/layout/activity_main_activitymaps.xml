<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3F51B5"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="1dp"
    tools:context=".MainActivitymaps">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="510dp" />

    <Button
        android:id="@+id/btn_satelital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2437A3"
        android:text="Satelite 🛰" />

    <Button
        android:id="@+id/btn_vista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F9F43"
        android:text="Mapita 🗺" />

    <Button
        android:id="@+id/btn_lima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="My House 🏠" />

</LinearLayout>